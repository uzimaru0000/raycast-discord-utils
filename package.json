{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "version": "0.1.0",
  "name": "raycast-discord-utils",
  "title": "Raycast-discord-utils",
  "description": "Discord is manipulated using the RPC API",
  "icon": "command-icon.png",
  "author": "uzimaru0000",
  "owner": "uzimaru0000",
  "categories": [
    "Other"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "activate",
      "title": "Activate",
      "description": "Activate Discord-Utils",
      "mode": "no-view"
    },
    {
      "name": "mute",
      "title": "Mute",
      "description": "Discord mute",
      "mode": "no-view"
    },
    {
      "name": "join",
      "title": "Join",
      "description": "Discord join voice channel",
      "mode": "view"
    },
    {
      "name": "exit",
      "title": "Exit",
      "description": "Exit voice channel",
      "mode": "no-view"
    }
  ],
  "preferences": [
    {
      "name": "clientId",
      "title": "Client Id",
      "description": "discord app client id",
      "type": "textfield",
      "required": true
    },
    {
      "name": "clientSecret",
      "title": "Client Secret",
      "description": "discord app client secret",
      "type": "textfield",
      "required": true
    },
    {
      "name": "authorizePort",
      "title": "Authorize Port",
      "description": "discord authorize redirect port",
      "type": "textfield",
      "default": "3000",
      "required": false
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.44.0",
    "discord-rpc": "^4.0.1",
    "express": "^4.18.2",
    "node-fetch": "2",
    "open": "^8.4.0",
    "ps-node": "^0.1.6"
  },
  "devDependencies": {
    "@types/discord-rpc": "^4.0.3",
    "@types/express": "^4.17.15",
    "@types/node": "18.8.3",
    "@types/node-fetch": "^2.6.2",
    "@types/ps-node": "^0.1.1",
    "@types/react": "18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vercel/ncc": "^0.36.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.9.4"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish",
    "build:server": "ncc build server/index.ts -o assets/dist/server --minify",
    "dev:server": "npm run build:server -- -w",
    "prebuild": "npm run build:server"
  }
}
